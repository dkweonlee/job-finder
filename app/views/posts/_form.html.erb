<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %>Prevented this post from saving:</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name, "Company Name" %><br>
  <%= f.text_field :name %><br>

  <br><br>

  <%= f.label :title, "Job Title" %><br>
  <%= f.text_field :title %><br>

  <br><br>

  <%= f.label :descripition %><br>
  <%= f.text_area :descripition %><br>

  <br><br>

  <%= f.label :job_type %><br>
  <%= f.text_field :job_type %><br>

  <br><br>

  <%= f.label :level %><br>
  <%= f.text_field :level %><br>

  <br><br>

  <%= f.label :location %><br>
  <%= f.text_field :location %><br>

  <br><br>

  <%= f.submit %>
<% end %>