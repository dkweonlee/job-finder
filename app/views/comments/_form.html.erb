<%= form_for [@post, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <h2><%= pluralize(@comment.errors.count, "error") %>Prevented this event from saving:</h2>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :comment %><br>
  <%= f.text_area :comment %><br>

  <br><br>

  <%= f.submit %>
<% end %>